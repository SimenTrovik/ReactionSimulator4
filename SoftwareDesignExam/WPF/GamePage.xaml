                <Run x:Name="Box3Difficulty" Text="Difficulty: "/><LineBreak/>
                <Run x:Name="Box3Key" Language="en-gb" Text="Key: "/>
            </TextBlock>
        </Border>
        <Border 
            BorderBrush="Black"
            Opacity="0"
            x:Name="Player4Box"
            HorizontalAlignment="Left" 
            CornerRadius="8"
            Height="106" 
            Margin="1281,270,0,0" 
            Background="Pink"
            VerticalAlignment="Top" 
            Width="206">
            <TextBlock 
                x:Name="Player4BoxText"
                FontSize="20"
