<Page x:Class="SoftwareDesignExam.WPF.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoftwareDesignExam.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1600"
      Title="GamePage"
      Background="White" Loaded="GamePage_Loaded">

    <Grid>
        <Ellipse x:Name="TrafficLight" Fill="Yellow" HorizontalAlignment="Center" Height="232" Stroke="Black" VerticalAlignment="Center" Width="232"/>
        <TextBlock x:Name="TitleText" Foreground="Black" HorizontalAlignment="Left" Margin="420,113,0,0" Text="Press your key when the light turns green!" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="910" FontSize="40"/>
        <TextBlock x:Name="TimerText" HorizontalAlignment="Center" Margin="0,0,0,0" Text="Get ready..." TextWrapping="Wrap" VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="ScoreText" HorizontalAlignment="Left" Margin="86,144,0,0" Text="Scores:" TextWrapping="Wrap" VerticalAlignment="Top" Height="421" Width="254" FontSize="20"/>
        <Button Content="Play again"
                Opacity="0"
                x:Name="PlayAgainButton"
                Click="PlayAgain"
                Foreground="Black"
                FontSize="26"
                FontWeight="Medium" Margin="564,588,0,0" Width="200" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </Button.Style>
        </Button>
        <Button Content="Meny"
                Opacity="0"
            x:Name="MenyButton"
            Click="ShowMeny"
            Foreground="Black"
            FontSize="26"
            FontWeight="Medium" Margin="841,588,0,0" Width="200" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </Button.Style>
        </Button>

        <Border 
            BorderBrush="Black"
            Opacity="0"
            x:Name="Player1Box"
            HorizontalAlignment="Left" 
            CornerRadius="8"
            Height="106" 
            Margin="86,270,0,0" 
            Background="Coral"
            VerticalAlignment="Top" 
            Width="207">
            <TextBlock 
                x:Name="Player1BoxText"
                FontSize="20"
                Foreground="Black" 
                Margin="14,10,14,10">
                    <Run x:Name="Box1Name" Text="Name: "/><Run/><LineBreak/>
                    <Run x:Name="Box1Difficulty" Text="Difficulty: "/><LineBreak/>
                    <Run x:Name="Box1Key" Language="en-gb" Text="Key: "/>
            </TextBlock>
        </Border>
        <Border 
            BorderBrush="Black"
            Opacity="0"
            x:Name="Player2Box"
            HorizontalAlignment="Left" 
            CornerRadius="8"
            Height="106" 
            Margin="86,431,0,0" 
            Background="Aqua"
            VerticalAlignment="Top" 
            Width="207">
            <TextBlock 
                x:Name="Player2BoxText"
                FontSize="20"
                Foreground="Black" 
                Margin="14,10,14,10">
                <Run x:Name="Box2Name" Text="Name: "/><Run/><LineBreak/>
                <Run x:Name="Box2Difficulty" Text="Difficulty: "/><LineBreak/>
                <Run x:Name="Box2Key" Language="en-gb" Text="Key: "/>
            </TextBlock>
        </Border>
        <Border 
            BorderBrush="Black"
            Opacity="0"
            x:Name="Player3Box"
            HorizontalAlignment="Left" 
            CornerRadius="8"
            Height="106" 
            Margin="86,596,0,0" 
            Background="GreenYellow"
            VerticalAlignment="Top" 
            Width="207">
            <TextBlock 
                x:Name="Player3BoxText"
