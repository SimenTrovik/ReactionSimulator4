<Page x:Class="SoftwareDesignExam.WPF.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoftwareDesignExam.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1600"
      Title="GamePage"
      Background="White" Loaded="GamePage_Loaded">

    <Grid>
        <Ellipse x:Name="TrafficLight" Fill="Yellow" HorizontalAlignment="Center" Height="232" Stroke="Black" VerticalAlignment="Center" Width="232"/>
        <TextBlock x:Name="TitleText" Foreground="Black" HorizontalAlignment="Center" Margin="0,36,0,0" Text="Press your key when the light turns green!" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="384" FontSize="20"/>
        <TextBlock x:Name="TimerText" HorizontalAlignment="Center" Margin="0,0,0,0" Text="Get ready..." TextWrapping="Wrap" VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="ScoreText" HorizontalAlignment="Left" Margin="86,144,0,0" Text="Scores:" TextWrapping="Wrap" VerticalAlignment="Top" Height="421" Width="254" FontSize="20"/>
        <Button Content="Play again"
                x:Name="PlayAgainButton"
                Click="PlayAgain"
                Foreground="Black"
                FontSize="26"
                FontWeight="Medium" Margin="0,400,0,0" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Page>
