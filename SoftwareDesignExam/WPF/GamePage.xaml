        <Border 
            BorderBrush="Black"
            Opacity="0"
            x:Name="Player6Box"
            HorizontalAlignment="Left" 
            CornerRadius="8"
            Height="106" 
            Margin="1281,596,0,0" 
            Background="Orange"
            VerticalAlignment="Top" 
            Width="206">
            <TextBlock 
                x:Name="Player6BoxText"
                FontSize="20"
                Foreground="Black" 
                Margin="14,10,14,10">
                <Run x:Name="Box6Name" Text="Name: "/><Run/><LineBreak/>
                <Run x:Name="Box6Difficulty" Text="Difficulty: "/><LineBreak/>
                <Run x:Name="Box6Key" Language="en-gb" Text="Key: "/>
            </TextBlock>
        </Border>
    </Grid>
</Page>
