            </TextBlock>
        </Border>
        <Border 
            BorderBrush="Black"
            Opacity="0"
            x:Name="Player4Box"
            HorizontalAlignment="Left" 
            CornerRadius="8"
            Height="106" 
            Margin="32,388,0,0" 
            Background="Pink"
            VerticalAlignment="Top" 
            Width="266">
            <TextBlock 
                x:Name="Player4BoxText"
                FontSize="20"
                Foreground="Black" 
                Margin="14,10,14,10">
                <Run x:Name="Box4Name" Text="Name: "/><Run/><LineBreak/>
                <Run x:Name="Box4Difficulty" Text="Difficulty: "/><LineBreak/>
                <Run x:Name="Box4Key" Language="en-gb" Text="Key: "/>
            </TextBlock>
        </Border>
        <Border 
            BorderBrush="Black"
            Opacity="0"
            x:Name="Player5Box"
            HorizontalAlignment="Left" 
            CornerRadius="8"
            Height="106" 
            Margin="32,515,0,0" 
            Background="PowderBlue"
            VerticalAlignment="Top" 
            Width="266">
            <TextBlock 
                x:Name="Player5BoxText"
                FontSize="20"
                Foreground="Black" 
                Margin="14,10,14,10">
                <Run x:Name="Box5Name" Text="Name: "/><Run/><LineBreak/>
                <Run x:Name="Box5Difficulty" Text="Difficulty: "/><LineBreak/>
                <Run x:Name="Box5Key" Language="en-gb" Text="Key: "/>
            </TextBlock>
        </Border>
        <Border 
            BorderBrush="Black"
            Opacity="0"
            x:Name="Player6Box"
            HorizontalAlignment="Left" 
            CornerRadius="8"
            Height="106" 
            Margin="32,640,0,0" 
            Background="Orange"
            VerticalAlignment="Top" 
            Width="266">
            <TextBlock 
                x:Name="Player6BoxText"
                FontSize="20"
                Foreground="Black" 
                Margin="14,10,14,10">
                <Run x:Name="Box6Name" Text="Name: "/><Run/><LineBreak/>
                <Run x:Name="Box6Difficulty" Text="Difficulty: "/><LineBreak/>
                <Run x:Name="Box6Key" Language="en-gb" Text="Key: "/>
            </TextBlock>
        </Border>
    </Grid>
</Page>
